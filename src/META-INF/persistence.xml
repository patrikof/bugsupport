<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="BugSupport">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:jboss/datasources/Postgres-DS</jta-data-source>
		<class>br.bug.dominio.Cliente</class>
		<class>br.bug.dominio.GrupoCliente</class>
		<class>br.bug.dominio.Papel</class>
		<class>br.bug.dominio.Prioridade</class>
		<class>br.bug.dominio.Produto</class>
		<class>br.bug.dominio.SistemaOperacional</class>
		<class>br.bug.dominio.Solicitacao</class>
		<class>br.bug.dominio.Status</class>
		<class>br.bug.dominio.TipoProduto</class>
		<class>br.bug.dominio.TipoSolicitacao</class>
		<class>br.bug.dominio.Usuario</class>
		<class>br.bug.dominio.Versao</class>
		<class>br.bug.dominio.UsuariosLembrados</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/suporte"/>
			<property name="hibernate.default_schema" value="public"/>
			<property name="hibernate.default_catalog" value="pg_catalog"/>
			<property name="hibernate.connection.username" value="postgres"/>
			<property name="hibernate.connection.password" value="postgres"/>
		</properties>
	</persistence-unit>
</persistence>